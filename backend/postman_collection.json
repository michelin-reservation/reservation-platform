{
  "info": {
    "name": "Michelin Reservation API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "인증",
      "item": [
        {
          "name": "회원가입",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/users/signup",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"테스트\",\n  \"phone\": \"010-1234-5678\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "로그인",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/users/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "예약",
      "item": [
        {
          "name": "예약 생성",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/reservations",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurant_id\": 1,\n  \"reservation_time\": \"2024-03-20T19:00:00Z\",\n  \"guest_count\": 2,\n  \"special_request\": \"창가 자리 부탁드립니다.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
    {
      "name": "관리자",
      "item": [
        {
          "name": "VIP 요청 목록 조회",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/admin/vip-requests",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ]
          }
        },
        {
          "name": "VIP 요청 승인",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/api/admin/vip-requests/1/approve",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": "여기에_일반_사용자_토큰_입력"
    },
    {
      "key": "adminToken",
      "value": "여기에_관리자_토큰_입력"
    }
  ]
} 