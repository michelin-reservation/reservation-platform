{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module",
        "project": [
            "./tsconfig.json",
            "./tsconfig.app.json"
        ]
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn"
        ],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "prettier/prettier": [
            "error"
        ]
    },
    "ignorePatterns": [
        "dist/",
        "node_modules/"
    ]
}