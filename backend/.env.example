# ──────────────── DB 설정 ────────────────
DB_NAME=michelin_dev
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=127.0.0.1
DB_PORT=3306

# ──────────────── JWT ────────────────
JWT_SECRET=your_jwt_secret_key

# ──────────────── Redis ────────────────
REDIS_URL=redis://redis:6379

# ──────────────── 서버 ────────────────
PORT=8000
NODE_ENV=development

# ──────────────── Sentry ────────────────
SENTRY_DSN_PROD=your_sentry_dsn_prod
SENTRY_DSN_DEV=your_sentry_dsn_dev

# ──────────────── Docker Hub ────────────────
DOCKERHUB_USERNAME=your_dockerhub_username

# ──────────────── NCP 서버 ────────────────
NCP_HOST=your_ncp_server_ip
NCP_USERNAME=your_ncp_username
NCP_SSH_KEY=your_ncp_ssh_key

# ──────────────── Slack ────────────────
SLACK_WEBHOOK_URL=your_slack_webhook_url

# ──────────────── 네이버 로그인 ────────────────
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
NAVER_CALLBACK_URL=http://localhost:8000/api/auth/naver/callback
NAVER_STATE=RANDOM_STATE

# ──────────────── 네이버 지도 (NCP) ────────────────
NAVER_MAP_CLIENT_ID=your_naver_map_client_id
