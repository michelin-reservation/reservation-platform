# ──────────────── DB 설정 ────────────────
DB_NAME=michelin_dev
DB_USER=root
DB_PASSWORD=your_db_password
DB_HOST=127.0.0.1
DB_PORT=3306

# ──────────────── JWT ────────────────
JWT_SECRET=your_jwt_secret_key

# ──────────────── Redis ────────────────
REDIS_URL=redis://redis:6379

# ──────────────── 서버 ────────────────
PORT=8000
NODE_ENV=production

# ──────────────── Sentry ────────────────
SENTRY_DSN=your_sentry_dsn

# ──────────────── Docker Hub ────────────────
DOCKERHUB_USERNAME=your_dockerhub_username

# ──────────────── NCP 서버 ────────────────
