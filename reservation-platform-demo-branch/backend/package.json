{
  "name": "michelin-reservation-backend",
  "version": "1.0.0",
  "description": "미슐랭 예약 플랫폼 백엔드",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "start:pm2": "cross-env NODE_ENV=production pm2 start app.js --name michelin-backend",
    "dev": "cross-env NODE_ENV=development nodemon app.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "db:migrate": "sequelize-cli db:migrate",
    "db:seed": "sequelize-cli db:seed:all",
    "db:reset": "sequelize-cli db:migrate:undo:all && sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "db:status": "sequelize-cli db:migrate:status",
    "validate:env": "node scripts/validate-env.js",
    "security:check": "npm audit",
    "security:fix": "npm audit fix",
    "postinstall": "npm audit fix || true && npm install pm2 -g",
    "seed": "node seeders/restaurantSeeder.js"
  },
  "dependencies": {
    "@babel/parser": "^7.27.5",
    "@prisma/client": "^6.9.0",
    "@sentry/integrations": "^7.101.1",
    "@sentry/node": "^7.120.3",
    "@sentry/tracing": "^7.101.1",
    "axios": "^1.6.7",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.1",
    "pm2": "^6.0.8",
    "prom-client": "^15.1.3",
    "redis": "^5.5.6",
    "response-time": "^2.3.2",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/response-time": "^2.3.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^6.3.3"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  }
}
